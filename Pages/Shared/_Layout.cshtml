<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SLED </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
</head>
<body>
    <div class="container-fluid bg-white mb-5" style="border-bottom: 3px solid #003e7a;">
        <nav class="navbar navbar-expand-lg navbar-light">
            <a class="navbar-brand d-none d-sm-none d-md-block d-lg-block d-xl-block " href="/">
                <img id="logo" src="/Images/waukesha_logo.svg" width="250" height="54" alt="Waukesha County Technical College" />
            </a>
            
            <a class="navbar-brand d-block d-sm-block d-md-none d-lg-none d-xl-none " href="/">
                <img id="logo" src="/Images/wctc-logo-sm.jpg" width="55" height="55" alt="Waukesha County Technical College" />
                </a>

            <ul class=" navbar-nav ms-auto   " id="navLinkOverride">
                <div class="dropdown">
                  <button class=" btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                    Admin Name
                  </button>
                  <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                    <li><a class="dropdown-item" href="#">Sign-Out</a></li>
                  </ul>
                </div>
            </ul>
        </nav>
    </div>
    <div class="alert alert-success alert-dismissible fade hide" role="alert">
        A simple success alert—check it out!
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    
    <div class="container">



            <div class="row ">
                <ul class="nav nav-tabs nav-fill  ">
                    @*Needs to be manually updated for each new controller*@

                        <li class="nav-item ">
                            <a class="nav-link active align-bottom h5" href="~/Admin/AdminDashboard">Admin Dashboard</a>
                        </li>

 
                        <li class="nav-item  ">
                            <a class="nav-link align-bottom h5"  href="~/InstructorAssessments/Dashboard">Faculty Dashboard</a>
                        </li>

                </ul>
            </div>



        <div class="bg-white" id="MainBody">
            @RenderBody()
        </div>

    </div>





    @RenderSection("scripts", required: false)
</body>
</html>